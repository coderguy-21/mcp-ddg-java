<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 
    Suppress Spring BeanPostProcessor warnings about MCP auto-configuration.
    These warnings are harmless and come from Spring AI MCP's internal bean initialization order.
    The Spring AI MCP framework creates a BeanPostProcessor for @McpTool annotation scanning,
    and Spring warns that other MCP framework beans can't be post-processed by it.
    This is expected behavior and doesn't indicate a problem with our application.
    -->
    <logger name="org.springframework.context.support.PostProcessorRegistrationDelegate" level="ERROR"/>
    
    <!-- 
    Suppress "No tool methods found" warning.
    This warning appears because we register tools as Function beans (Spring AI 1.1 style),
    not using the old McpServerTool annotation style that this provider checks for.
    Our tools work correctly despite this warning.
    -->
    <logger name="org.springframework.ai.mcp.spring.provider.tool.SyncMcpToolProvider" level="ERROR"/>
    
    <!-- Application logging -->
    <logger name="com.xtivia.mcp.websearch" level="INFO"/>
    
    <!-- Spring Boot logging - quieter startup -->
    <logger name="org.springframework.boot" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.ai" level="WARN"/>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
